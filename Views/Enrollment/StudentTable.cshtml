@{
}
<div class="container">

    <table class="table">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    First Name
                </th>
                <th>
                    Middle Name
                </th>
                <th>
                    Suffix
                </th>
                <th>
                    Gender
                </th>
                <th>
                    Year Level
                </th>
                <th>
                    Degree
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var student in Model)
            {
                <tr>
                    <td>
                        @student.ID
                    </td>
                    <td>
                        @student.Lname
                    </td>
                    <td>
                        @student.Fname
                    </td>
                    <td>
                        @student.Mname
                    </td>
                    <td>
                        @student.Suffix
                    </td>
                    <td>
                        @student.Gender
                    </td>
                    <td>
                        @student.Yearlevel
                    </td>
                    <td>
                        @student.Degree
                    </td>
                    <td>
                        <form method="get" action="@Url.Action("UpdateEnrollmentForm","Enrollment", new {id = student.ID})">
                            <button type="submit" class="btn btn-primary">Update</button>
                        </form>
                        <form method="post" action="@Url.Action("DeleteStudent", "Enrollment", new {id = student.ID})" onsubmit="return confirm('Are you sure you want to delete this student?');">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>